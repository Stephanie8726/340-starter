<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { %>
        <h1>You're logged in! <%= user %>
        </h1>
        <% } %>

            <%= messages.notice %>

                <% if (loggedin) { %>

                    <h2>Welcome <%= accountData.account_firstname %>
                    </h2>
                    <p><a href="/account/update/<%= accountData.account_id %>">Update Account Information</a></p>
                    <% if (accountType==='Employee' || accountType==='Admin' ) { %>
                        <h3>Inventory Management</h3>
                        <p><a href="/inv/management">Access Inventory Management</a></p>
                        <% } %>

                            <% } else { %>
                                <p>You need to be logged in to view your account management page.</p>
                                <a href="/account/login">Login</a>
                                <% } %>